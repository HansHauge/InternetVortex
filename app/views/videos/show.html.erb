<%
  meta title: @video.title,
       description: @video.summary.to_description,
       keywords: @video.title.to_keywords
%>

<div id='outer-content-wrapper'>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @video.title %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <li class="list-group-item">
          <div class='media'>
            <video autoplay loop controls preload>
              <source src="<%= @video.video_link %>" type='video/webm'>
              <source src="<%= @video.video_link %>" type='video/mp4'>
            </video>
          </div>
          <br>
          <span class='inline-source'>(<%= link_to @video.source, @video.guid %>)</span>
        </li>
        <%= render 'layouts/share_this' %>
      </ul>
    </div>
  </div>
</div>
