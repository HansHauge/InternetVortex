<div id='outer-content-wrapper'>
  <%= will_paginate @articles, class: 'digg_pagination' %><br>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Recent Articles</h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% @articles.each do |article| %>
          <li class="list-group-item">
            <% if article.is_a?(RedditFunnyArticle) %>
              <%= link_to article.title, article_path(article) %>  <span class='inline-source'>(<%= link_to article.source, article.guid %>)</span>
            <% else %>
              <%= link_to article.title, article.guid %>  <span class='inline-source'>
                (<%= link_to article.source, article.guid %>)</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
