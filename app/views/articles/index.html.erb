<div id='outer-content-wrapper'>
  <%= will_paginate @articles, class: 'digg_pagination' %><br>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Recent Articles</h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% @articles.each do |article| %>
          <li class="list-group-item slim-list-group-item">
            <% if article.is_a?(RedditFunnyArticle) %>
              <div class='article-thumbnail'>
                <%= link_to article_path(article) do %>
                  <%= image_tag article.thumbnail, class: 'img-responsive' %>
                <% end %>
              </div>
              <div class='article-title'>
                <%= link_to article.title, article_path(article) %>  <span class='inline-source'>
                  (<%= link_to article.source, article.guid %>)</span>
              </div>
            <% else %>
              <div class='article-thumbnail'>
                <%= link_to article.guid do %>
                  <%= image_tag article.thumbnail, class: 'img-responsive' %>
                <% end %>
              </div>
              <div class='article-title'>
                <%= link_to article.title, article.guid %>  <span class='inline-source'>
                  (<%= link_to article.source, article.guid %>)</span>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
