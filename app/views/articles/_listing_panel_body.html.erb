<div class="panel-body">
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item slim-list-group-item">
        <div class='row'>
          <div class='col-md-1'>
            <div class='article-thumbnail'>
              <%= link_to article.guid do %>
                <%= image_tag article.thumbnail, class: 'img-responsive' %>
              <% end %>
            </div>
          </div>
          <div class='col-md-11'>
            <%= link_to article.title, article.guid %>  <span class='inline-source'>
                (<%= link_to article.source, article.guid %>)</span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
