<div class="panel-body">
  <ul class="list-group">
    <% @pictures.each do |picture| %>
      <li class="list-group-item slim-list-group-item">
        <div class='row'>
          <div class='col-md-1'>
            <div class='article-thumbnail'>
              <%= link_to picture_path(picture) do %>
                <%= image_tag picture.thumbnail, class: 'img-responsive' %>
              <% end %>
            </div>
          </div>
          <div class='col-md-11'>
            <%= link_to picture.title, picture_path(picture) %>  <span class='inline-source'>
                (<%= link_to picture.source, picture.guid %>)</span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
