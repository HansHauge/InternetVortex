<%
  meta title: @picture.title,
       keywords: @picture.title.to_keywords,
       og: { image: @picture.thumbnail }
%>

<div class="col-md-8">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @picture.title %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <li class="list-group-item">
          <% if @picture.actual_image.ends_with?('.gifv') %>
            <video autoplay loop muted preload>
              <source src="<%= gifv_sub_webm(@picture.actual_image) %>" type='video/webm'>
              <source src="<%= gifv_sub_mp4(@picture.actual_image) %>" type='video/mp4'>
            </video>
          <% else %>
            <%= image_tag @picture.actual_image, class: 'img-responsive' %>
          <% end %>
          <br>
          <span class='inline-source'>(<%= link_to @picture.source, @picture.guid %>)</span>
        </li>
        <%= render 'layouts/share_this' %>
      </ul>
    </div>
  </div>
</div>
<div class="col-md-2">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Our Sponsors</h3>
    </div>
    <div class="panel-body">
      <p>
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- responsive-ad -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1535464165045682"
             data-ad-slot="1036549788"
             data-ad-format="auto"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </p>
    </div>
  </div>
</div>
