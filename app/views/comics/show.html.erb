<%
  meta title: "Comic - #{@comic.title}",
       keywords: @comic.content.remove_html_tags.to_keywords,
       og: { image: @comic.thumbnail }
%>

<div class="col-md-8">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @comic.title %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <li class="list-group-item">
          <div class='img-responsive'>
            <%= @comic.content.html_safe %>
          </div>
          <br>
          <span class='inline-source'>(<%= link_to @comic.source, @comic.guid %>)</span>
        </li>
        <%= render 'layouts/share_this' %>
      </ul>
    </div>
  </div>
</div>
<div class="col-md-2">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Our Sponsors</h3>
    </div>
    <div class="panel-body">
      <p>
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- responsive-ad -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-1535464165045682"
             data-ad-slot="1036549788"
             data-ad-format="auto"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </p>
    </div>
  </div>
</div>